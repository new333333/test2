#if ($ssVisitor.isHtml())
	#parse("style.vm")
	
	## Information for the HTML mime goes here.
	
	<div class="email-block">  
		<div class="email-share">$esc.html(${ssSharer})</div>  
		<div class="email-title">$esc.html(${ssSharedEntity.Title})</div>
		<div class="email-expire">$esc.html(${ssShareExpiration})</div>
		#if ($ssShare.Comment && $ssShare.Comment != "")
			<div class="email-note">$esc.html(${ssShare.Comment})</div>
		#end
		
		## - - - - -  Customization Note - - - - -
		## To replace with your own logo and or signature, edit the
		## following.  You can also remove it and add your information
		## to footer.vm to be included in all notification emails.
		##
		## See the content of footer.vm for more information.
		## - - - - - - - - - - - - - - - - - - - -
		<div class="email-logo">Novell<span style="font-size: 8px;">&reg;</span> $esc.html(${ssProduct})</div>
		<br />
		
		#if ($ssPublicLinkViewUrl && $ssPublicLinkViewUrl != "")
			<div class="email-plHeader">$esc.html(${ssPublicLinkViewHeader})</div>
			<div class="email-url"><a class="email-anchor" href="${ssPublicLinkViewUrl}">$esc.html(${ssPublicLinkViewUrl})</a></div>
			<br />
		#end
		
		<div class="email-plHeader">$esc.html(${ssPublicLinkDownloadHeader})</div>
		<div class="email-url"><a class="email-anchor" href="${ssPublicLinkDownloadUrl}">$esc.html(${ssPublicLinkDownloadUrl})</a></div>
	</div>
	
#else
	## Information for the plain text mime goes here.
	
	#ss_printLn(${ssSharer})
	
	#ss_printLn(${ssSharedEntity.Title})
	
	#ss_printLn(${ssShareExpiration})
	
	#if ($ssShare.Comment && $ssShare.Comment != "")
		#ss_printLn(${ssShare.Comment})
	#end
	
	#ss_printLn("NovellÂ® ${ssProduct}")
	
	#if ($ssPublicLinkViewUrl && $ssPublicLinkViewUrl != "")
		#ss_printLn(${ssPublicLinkViewHeader})
		#ss_printLn(${ssPublicLinkViewUrl})
	#end
	
	#ss_printLn(${ssPublicLinkDownloadHeader})
	#ss_printLn(${ssPublicLinkDownloadUrl})
#end
