<?xml version="1.0"?>

<project name="sample" basedir="." default="compile">
	<property name="project.dir" value="../.." />
	
	<import file="${project.dir}/build-common.xml"/>
	<import file="${project.dir}/deploy-support.xml" />
	
	<property name="jar.file" value="ssf-sample-applet.jar" />

	<target name="deploy" depends="jar">
		<antcall target="deploy-applet">
			<param name="deploy-support.jar.file" value="${jar.file}" />
			<param name="deploy-support.applet.deploy.dir" value="applets/sample" />
		</antcall>
	</target>

</project>