<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app PUBLIC
	"-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
	"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<display-name>Sample Application</display-name>

	<description>Sample Application</description>
	
	<!-- This servlet implements the application that the users access through browser -->
	<servlet>
		<servlet-name>coAppServlet</servlet-name>
		<servlet-class>com.sitescape.team.samples.coapp.web.CoAppServlet</servlet-class>
	</servlet>
	
	<!-- End users can not get to this servlet because there is no path mapping that allows it.
	     This servlet is used internally to handle SSO request made from the portal side when user logs in. -->
	<servlet>
		<servlet-name>ssoServlet</servlet-name>
		<servlet-class>com.sitescape.team.samples.coapp.web.SSOServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>coAppServlet</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>

</web-app>
