<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">
  <class discriminator-value="A" dynamic-update="true" lazy="false" table="SS_CustomAttributes" name="com.sitescape.team.domain.CustomAttribute">
    <id unsaved-value="null" name="id">
      <column name="id" sql-type="char(32)"/>
      <generator class="uuid.hex"/>
    </id>
    <discriminator type="char" column="type"/>
   <component name="owner" class="com.sitescape.team.domain.AnyOwner">
      <many-to-one name="folderEntry" index="ownerFolderEntry_cAtt"/>
      <many-to-one name="principal" index="ownerPrincipal_cAtt"/>
      <many-to-one name="binder" index="ownerBinder_cAtt"/>
      <any name="entity" id-type="java.lang.Long" meta-type="string" index="entityOwner_cAtt" >
        <meta-value class="com.sitescape.team.domain.FolderEntry" value="folderEntry"/>
        <meta-value class="com.sitescape.team.domain.User" value="user"/>
        <meta-value class="com.sitescape.team.domain.Group" value="group"/>
        <meta-value class="com.sitescape.team.domain.Folder" value="folder"/>
        <meta-value class="com.sitescape.team.domain.Workspace" value="workspace"/>
        <meta-value class="com.sitescape.team.domain.ProfileBinder" value="profileBinder"/>
        <meta-value class="com.sitescape.team.domain.TemplateBinder" value="template"/>
        <column name="ownerType" length="16"/>
        <column name="ownerId"/>
      </any>
      <property name="ownerType" update="false" insert="false"/>
      <property name="ownerId" update="false" insert="false"/>
      <property name="owningBinderKey" length="255"/>
      <property name="owningBinderId" index="owningBinder_cAtt"/>
    </component>
    <property name="name" length="64"/>
    <property name="stringValue" length="2000"/>
    <component name="description">
      <property name="HDescription" length="2000000" column="description_text" type="com.sitescape.team.dao.util.SSClobStringType"/>
      <property name="HFormat" column="description_format"/>
    </component>
    <property name="longValue" />
    <property name="dateValue" />
    <property name="serializedValue"  length="2000000" type="com.sitescape.team.dao.util.SSBlobSerializableType"/>
    <property name="xmlValue" length="2000000" type="com.sitescape.team.dao.util.SSClobStringType"/>
    <property name="booleanValue" />
    <set inverse="true" cascade="all,delete-orphan" lazy="true" batch-size="4" name="values" order-by="position asc">
      <key column="parent"/>
      <one-to-many class="com.sitescape.team.domain.CustomAttributeListElement"/>
    </set>
    <property name="valueType"/>
    <subclass name="com.sitescape.team.domain.CustomAttributeListElement" lazy="false" discriminator-value="L" dynamic-update="true">
  	 <property name="position"/>
     <many-to-one name="parent">
        <column name="parent" sql-type="char(32)" index="owningAttribute_cAtt"/>
      </many-to-one>
    </subclass>
  </class>
</hibernate-mapping>
