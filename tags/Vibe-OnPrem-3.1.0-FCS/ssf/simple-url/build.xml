<?xml version="1.0"?>

<project name="simple-url" basedir="." default="war">
	<import file="../build-common.xml" />
	<import file="../deploy-support.xml" />
		
	<property name="jar.file" value="kablink-teaming-simpleurl.jar" />
	<property name="teaming.war.name" value="teaming" />
	<property name="teaming.war.file" value="${teaming.war.name}.war" />
	<property name="vibe.war.name" value="vibe" />
	<property name="vibe.war.file" value="${vibe.war.name}.war" />
	<property name="temp.dir" value="temp" />
	
	<!-- This overrides the imported definition -->
	<path id="project.classpath">
		<pathelement path="${project.dir}/as-common/classes" />
		<fileset dir="../lib" includes="*.jar" />
	</path>

	<target name="clean" depends="build-common.clean">
		<delete>
			<fileset dir="." includes="${teaming.war.file}" />
			<fileset dir="." includes="${vibe.war.file}" />
		</delete>
		<delete includeEmptyDirs="true" failonerror="false">
			<fileset dir="${temp.dir}" />
		</delete>
	</target>
	
	<target name="war" depends="clean,jar">
		<copy todir="${temp.dir}/WEB-INF/lib">
			<fileset dir="." includes="${jar.file}"/>
		</copy>
		<copy todir="${temp.dir}">
			<fileset dir="${web.dir}" includes="**/*"/>
		</copy>
		<war
			basedir="${temp.dir}"
			destfile="${teaming.war.file}"
			webxml="${temp.dir}/WEB-INF/web.xml"
		/>
		<war
			basedir="${temp.dir}"
			destfile="${vibe.war.file}"
			webxml="${temp.dir}/WEB-INF/web.xml"
		/>
	</target>

	<target name="build"  depends="war"/>

    <target name="deploy">
        <antcall target="deploy-war">
        	<param name="deploy-support.war.name" value="${teaming.war.name}" />
        </antcall>
        <antcall target="deploy-war">
        	<param name="deploy-support.war.name" value="${vibe.war.name}" />
        </antcall>
	</target>

</project>