<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE server>
<!-- $Id: mail-service.xml,v 1.5.6.1 2005/06/01 06:20:43 starksm Exp $ -->

<server>

  <!-- ==================================================================== -->
  <!-- Mail Connection Factory                                              -->
  <!-- ==================================================================== -->

  <mbean code="org.jboss.mail.MailService"
         name="jboss:service=Mail">
    <attribute name="JNDIName">java:/Mail</attribute>
    <attribute name="User">nobody</attribute>
    <attribute name="Password">password</attribute>
    <attribute name="Configuration">
       <!-- Test -->
       <configuration>
          <!-- Change to your mail server prototocol -->
          <property name="mail.store.protocol" value="pop3"/>
          <property name="mail.transport.protocol" value="smtp"/>

          <!-- Change to the user who will receive mail  -->
          <property name="mail.user" value="nobody"/>

          <!-- Change to the mail server  -->
          <property name="mail.pop3.host" value="pop3.nosuchhost.nosuchdomain.com"/>

          <!-- Change to the SMTP gateway server -->
          <property name="mail.smtp.host" value="smtp.nosuchhost.nosuchdomain.com"/>

          <!-- Change to the address mail will be from  -->
          <property name="mail.from" value="nobody@nosuchhost.nosuchdomain.com"/>

          <!-- Enable debugging output from the javamail classes -->
          <property name="mail.debug" value="false"/>
       </configuration>
       <depends>jboss:service=Naming</depends>
    </attribute>
  </mbean>
  
  <mbean code="org.jboss.mail.MailService" name="jboss:service=SiteScape">
    <attribute name="JNDIName">mail/SiteScape</attribute>
    <attribute name="User">do-not-respond@sitescape.com</attribute>
    <attribute name="Configuration">
      <configuration>
        <property name="mail.store.protocol" value="pop3" />
        <property name="mail.transport.protocol" value="smtp" />
        <property name="mail.user" value="do-not-respond@sitescape.com" />
        <property name="mail.pop3.host" value="host54a.simplicato.com" />
        <property name="mail.smtp.host" value="host54a.simplicato.com" />
        <property name="mail.imap.host" value="host54a.simplicato.com" />
        <property name="mail.from" value="do-not-respond@sitescape.com" />
        <property name="mail.debug" value="false" />
      </configuration>
    </attribute>
  </mbean>
	
  <mbean code="org.jboss.mail.MailService" name="jboss:service=SiteScapePosting">
    <attribute name="JNDIName">mail/SiteScapePosting</attribute>
    <attribute name="User">mccann@sitescape.com</attribute>
    <attribute name="Password">dontknow</attribute>
    <attribute name="Configuration">
      <configuration>
        <property name="mail.store.protocol" value="imap" />
        <property name="mail.transport.protocol" value="smtp" />
        <property name="mail.imap.host" value="host54a.simplicato.com" />
        <property name="mail.pop3.host" value="host54a.simplicato.com" />
        <property name="mail.smtp.host" value="host54a.simplicato.com" />
      </configuration>
    </attribute>
  </mbean>

</server>
