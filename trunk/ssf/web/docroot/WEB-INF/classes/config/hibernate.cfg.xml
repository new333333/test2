<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory name="ssf">
		
		<!-- Set the JNDI location of the SiteScape datasource. -->
		<property name="connection.datasource">jdbc/SiteScapePool</property>
		<!-- Use the SIteScape connection provider to lookup JNDI datasource
		     because it works across multiple J2EE servers. -->
		<property name="connection.provider_class">com.sitescape.util.dao.hibernate.DSConnectionProvider</property>
		<!-- Use the SIteScape SQL dialect because it will automatically detect 
		     the proper SQL dialect based on your connection URL. -->
		<property name="dialect">com.sitescape.util.dao.hibernate.DynamicDialect</property>
		<!-- Need this for bulk Delete statements -->
		<property name="hibernate.query.factory_class">org.hibernate.hql.ast.ASTQueryTranslatorFactory</property>
		<!-- Other miscellaneous Hibernate properties. -->
		<property name="max_fetch_depth">0</property>
		<property name="cache.use_query_cache">true</property>
		<property name="statement_cache.size">20</property>
		<property name="jdbc.batch_size">0</property>
		<property name="jdbc.use_scrollable_resultset">true</property>
		<property name="cglib.use_reflection_optimizer">true</property>
		<property name="cache.provider_class">com.sitescape.team.util.EhCacheProvider</property>
		<!-- Set the following two properties to false when running under production since it affect performance -->
<!-- 		<property name="show_sql">true</property>
		<property name="hibernate.generate_statistics">true</property>
 -->
 		<property name="hibernate.hbm2ddl.auto">update</property>
		<!-- Sitescape Mappings -->
		<mapping resource="com/sitescape/team/security/function/Function.hbm.xml"/>
	    <mapping resource="com/sitescape/team/security/function/WorkAreaFunctionMembership.hbm.xml"/>
	    <mapping resource="com/sitescape/team/domain/Attachment.hbm.xml"/>
	    <mapping resource="com/sitescape/team/domain/AuditTrail.hbm.xml"/>
	    <mapping resource="com/sitescape/team/domain/Binder.hbm.xml"/>
	    <mapping resource="com/sitescape/team/domain/ChangeLog.hbm.xml"/>
	    <mapping resource="com/sitescape/team/domain/CustomAttribute.hbm.xml"/>
	    <mapping resource="com/sitescape/team/domain/Dashboard.hbm.xml"/>
	    <mapping resource="com/sitescape/team/domain/Definition.hbm.xml"/>
	    <mapping resource="com/sitescape/team/domain/Event.hbm.xml"/> 
	    <mapping resource="com/sitescape/team/domain/FolderEntry.hbm.xml"/>
	    <mapping resource="com/sitescape/team/domain/LibraryEntry.hbm.xml"/>
	    <mapping resource="com/sitescape/team/domain/Membership.hbm.xml"/>
	    <mapping resource="com/sitescape/team/domain/PostingDef.hbm.xml"/>
	    <mapping resource="com/sitescape/team/domain/Principal.hbm.xml"/>
	    <mapping resource="com/sitescape/team/domain/Ratings.hbm.xml"/>
	    <mapping resource="com/sitescape/team/domain/SeenMap.hbm.xml"/>
	    <mapping resource="com/sitescape/team/domain/Subscription.hbm.xml"/>
	    <mapping resource="com/sitescape/team/domain/Tag.hbm.xml"/>
	    <mapping resource="com/sitescape/team/domain/UserProperties.hbm.xml"/>
	    <mapping resource="com/sitescape/team/domain/Visits.hbm.xml"/>
	    <mapping resource="com/sitescape/team/domain/WorkflowResponse.hbm.xml"/>
	    <mapping resource="com/sitescape/team/domain/WorkflowState.hbm.xml"/>

 
	</session-factory>
</hibernate-configuration>