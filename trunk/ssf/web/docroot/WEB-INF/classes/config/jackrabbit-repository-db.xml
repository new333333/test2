<?xml version="1.0"?>

<Repository>
	<FileSystem class="org.apache.jackrabbit.core.fs.db.DbFileSystem">
	    <param name="driver" value="com.mysql.jdbc.Driver"/>
	    <param name="url" value="jdbc:mysql://localhost:3306/sitescape_jcr?useUnicode=true&amp;characterEncoding=UTF-8" />
	    <param name="user" value="root" />
	    <param name="password" value="root" />
	    <!-- mysql, oracle, or mssql -->
	    <param name="schema" value="mysql"/>
	    <param name="schemaObjectPrefix" value="JACKRABBIT_FS_"/>
	</FileSystem>
	<Security appName="Jackrabbit">
		<AccessManager class="org.apache.jackrabbit.core.security.SimpleAccessManager" />
		<LoginModule class="org.apache.jackrabbit.core.security.SimpleLoginModule">
			<param name="anonymousId" value="anonymous" />
		</LoginModule>
	</Security>
	<Workspaces rootPath="${rep.home}/workspaces" defaultWorkspace="sitescape" />
	<Workspace name="${wsp.name}">
		<FileSystem class="org.apache.jackrabbit.core.fs.db.DbFileSystem">
		    <param name="driver" value="com.mysql.jdbc.Driver"/>
		    <param name="url" value="jdbc:mysql://localhost:3306/sitescape_jcr?useUnicode=true&amp;characterEncoding=UTF-8" />
		    <param name="user" value="root" />
		    <param name="password" value="root" />
		    <param name="schema" value="mysql"/>
		    <param name="schemaObjectPrefix" value="JACKRABBIT_FS_${wsp.name}_"/>
		</FileSystem>

		<PersistenceManager class="org.apache.jackrabbit.core.state.db.SimpleDbPersistenceManager">
			<param name="driver" value="com.mysql.jdbc.Driver" />
			<param name="url" value="jdbc:mysql://localhost:3306/sitescape_jcr?useUnicode=true&amp;characterEncoding=UTF-8" />
			<param name="user" value="root" />
			<param name="password" value="root" />
			<param name="schema" value="mysql" />
			<param name="schemaObjectPrefix" value="JACKRABBIT_PM_${wsp.name}_" />
			<param name="externalBLOBs" value="false" />
		</PersistenceManager>
	</Workspace>
	<Versioning rootPath="${rep.home}/version">
		<FileSystem class="org.apache.jackrabbit.core.fs.db.DbFileSystem">
		    <param name="driver" value="com.mysql.jdbc.Driver"/>
		    <param name="url" value="jdbc:mysql://localhost:3306/sitescape_jcr?useUnicode=true&amp;characterEncoding=UTF-8" />
		    <param name="user" value="root" />
		    <param name="password" value="root" />
		    <param name="schema" value="mysql"/>
		    <param name="schemaObjectPrefix" value="JACKRABBIT_V_FS_"/>
		</FileSystem>

		<PersistenceManager class="org.apache.jackrabbit.core.state.db.SimpleDbPersistenceManager">
			<param name="driver" value="com.mysql.jdbc.Driver" />
			<param name="url" value="jdbc:mysql://localhost:3306/sitescape_jcr?useUnicode=true&amp;characterEncoding=UTF-8" />
			<param name="user" value="root" />
			<param name="password" value="root" />
			<param name="schema" value="mysql" />
			<param name="schemaObjectPrefix" value="JACKRABBIT_V_PM_" />
			<param name="externalBLOBs" value="false" />
		</PersistenceManager>
	</Versioning>
	<!-- Uncomment this if running within a clustered environment.
	     Make sure to assign a unique id to each node in the cluster.	     
	     Important: The directory path specified by the value of "directory"
    		param below must be on a share accessible to all nodes in a cluster. -->
	<!--<Cluster id="node1">
  		<Journal class="org.apache.jackrabbit.core.journal.FileJournal">
    		<param name="revision" value="${rep.home}/revision" />
    		<param name="directory" value="/cluster-shared-drive/icecoredata/jackrabbit/journal" />
  		</Journal>
	</Cluster>-->
</Repository>