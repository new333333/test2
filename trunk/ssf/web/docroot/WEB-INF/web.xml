<?xml version="1.0"?>

<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
                         "http://java.sun.com/dtd/web-app_2_3.dtd">
                         
<web-app>

	<display-name>SiteScape Forum</display-name>

	<context-param>
		<param-name>zoneName</param-name>
		<param-value>javademo</param-value>
	</context-param>
	
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>javademo.root</param-value>
	</context-param>

    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>/WEB-INF/log4j.properties</param-value>
    </context-param>
	
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<!-- If using JTA, comment out this element -->
		<param-value>
			/WEB-INF/context/applicationContext.xml
			/WEB-INF/context/spring-transaction-local.xml
		</param-value>
		<!-- If using local transaction, comment out this element -->
		<!--<param-value>
			/WEB-INF/context/applicationContext.xml
			/WEB-INF/context/spring-transaction-jta.xml
		</param-value>-->
	</context-param>

	<!-- TODO This will NOT work...
	<filter>
		<filter-name>Open Session In View Filter</filter-name>
		<filter-class>com.sitescape.ef.web.servlet.filter.OpenSessionInViewFilter</filter-class>
	</filter>-->

	<filter>
		<filter-name>loginFilter</filter-name>
		<filter-class>com.sitescape.ef.web.servlet.filter.LoginFilter</filter-class>
	</filter>
	
	<!--<filter>
		<filter-name>principalInjectionFilter</filter-name>
		<filter-class>com.sitescape.ef.web.servlet.filter.PrincipalInjectionFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>principalInjectionFilter</filter-name>
		<servlet-name>dispatcher</servlet-name>
	</filter-mapping>

	<filter-mapping>
		<filter-name>principalInjectionFilter</filter-name>
		<servlet-name>portletAdapter</servlet-name>
	</filter-mapping>-->

	<filter-mapping>
		<filter-name>loginFilter</filter-name>
		<servlet-name>dispatcher</servlet-name>
	</filter-mapping>

	<filter-mapping>
		<filter-name>loginFilter</filter-name>
		<servlet-name>portletAdapter</servlet-name>
	</filter-mapping>

	<listener>
		<listener-class>org.springframework.web.util.WebAppRootListener</listener-class>
	</listener>

    <listener>
        <listener-class>com.sitescape.ef.web.util.Log4jConfigListener</listener-class>
    </listener>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>viewRendererServlet</servlet-name>
		<servlet-class>org.springframework.web.portlet.ViewRendererServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>dispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>namespace</param-name>
			<param-value>context/web-servlet</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>portletAdapter</servlet-name>
		<servlet-class>com.sitescape.ef.portletadapter.servlet.PortletAdapterServlet</servlet-class>
		<init-param>
			<param-name>namespace</param-name>
			<param-value>context/adapter-servlet</param-value>
		</init-param>
		<load-on-startup>3</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>ccDispatchServer</servlet-name>
		<servlet-class>com.sitescape.ef.web.crosscontext.DispatchServer</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>viewRendererServlet</servlet-name>
		<url-pattern>/WEB-INF/servlet/view</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>dispatcher</servlet-name>
		<url-pattern>/s/*</url-pattern>		
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>portletAdapter</servlet-name>
		<url-pattern>/a/*</url-pattern>		
	</servlet-mapping>

	<!-- Do NOT ever change this timeout value -->
	<session-config>
		<session-timeout>0</session-timeout>
	</session-config>

    <taglib>
        <taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
        <taglib-location>/WEB-INF/tags/c.tld</taglib-location>
    </taglib>

    <taglib>
        <taglib-uri>http://java.sun.com/jsp/jstl/fmt</taglib-uri>
        <taglib-location>/WEB-INF/tags/fmt.tld</taglib-location>
    </taglib>

    <taglib>
        <taglib-uri>http://java.sun.com/jsp/jstl/functions</taglib-uri>
        <taglib-location>/WEB-INF/tags/fn.tld</taglib-location>
    </taglib>

    <taglib>
        <taglib-uri>http://www.springframework.org/tags</taglib-uri>
        <taglib-location>/WEB-INF/tags/spring.tld</taglib-location>
    </taglib>

    <!--<taglib>
        <taglib-uri>http://java.sun.com/portlet</taglib-uri>
        <taglib-location>/WEB-INF/tags/portlet.tld</taglib-location>
    </taglib>-->

    <taglib>
        <taglib-uri>http://www.sitescape.com/tags-ssf</taglib-uri>
        <taglib-location>/WEB-INF/tags/ssf.tld</taglib-location>
    </taglib>

    <taglib>
        <taglib-uri>http://www.sitescape.com/tags-portletadapter</taglib-uri>
        <taglib-location>/WEB-INF/tags/ssf-portletadapter.tld</taglib-location>
    </taglib>

	<resource-ref>
		<res-ref-name>jdbc/SiteScapePool</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Shareable</res-sharing-scope>
	</resource-ref>
	
	<resource-ref>
		<res-ref-name>mail/SiteScape</res-ref-name>
		<res-type>javax.mail.Session</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	
	<resource-ref>
		<res-ref-name>mail/SiteScapePosting</res-ref-name>
		<res-type>javax.mail.Session</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

</web-app>