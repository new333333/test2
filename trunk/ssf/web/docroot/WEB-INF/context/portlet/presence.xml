<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "../../dtd/spring-beans.dtd">
<beans>

	<!-- Controllers -->

	<bean id="viewController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.presence.ViewController" />
	<bean id="editController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.presence.EditController" />

	<bean id="profileViewEntryController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.presence.ViewEntryController" />

 	<!-- Handlers -->

	<bean id="portletModeParameterHandlerMapping" parent="portletModeParameterHandlerMappingTemplate">
			<property name="portletModeParameterMap">
			<map>
				<entry key="view">
					<map>
						<entry key="view_profile_entry"><ref bean="profileViewEntryController"/></entry>
						<entry key="view_presence"><ref bean="viewController"/></entry>
					</map>
				</entry>
				<entry key="edit">
					<map>
					</map>
				</entry>
				<entry key="help">
					<map>
					</map>
				</entry>
			</map>
		</property>
	</bean>

	<bean id="portletModeHandlerMapping" parent="portletModeHandlerMappingTemplate">
		<property name="portletModeMap">
			<map>
				<entry key="view"><ref bean="viewController"/></entry>
				<entry key="edit"><ref bean="editController"/></entry>
<!--				<entry key="help"><ref bean="forumHelpController"/></entry> -->
			</map>
		</property>
	</bean>

	<bean id="defaultExceptionHandler" parent="portletDefaultExceptionHandlerTemplate"/>

</beans>
