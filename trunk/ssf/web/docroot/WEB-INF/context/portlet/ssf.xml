<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "../../dtd/spring-beans.dtd">
<beans>

	<!-- Controllers -->

	<bean id="viewController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.forum.ViewController" />
	<bean id="closeWindowController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.forum.CloseWindowController" />
	<bean id="reloadOpenerController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.forum.ReloadOpenerController" />
	<bean id="editController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.forum.EditController" />

	<bean id="folderAddEntryController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.forum.AddEntryController" />
	<bean id="folderAddFolderController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.forum.AddFolderController" />
	<bean id="folderAjaxController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.forum.AjaxController" />
	<bean id="profileAddEntryController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.profile.AddEntryController" />

	<bean id="filterController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.binder.FilterController" />
	<bean id="accessControlController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.binder.AccessControlController" />
	<bean id="configureController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.binder.ConfigureController" />
	<bean id="definitionController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.definitionBuilder.ViewController" />
	<bean id="binderModifyController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.binder.ModifyBinderController" />
	<bean id="dashboardModifyController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.binder.ModifyDashboardController" />
	<bean id="searchController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.binder.SearchController" />

	<bean id="profileModifyEntryController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.profile.ModifyEntryController" />
	<bean id="folderModifyEntryController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.forum.ModifyEntryController" />
	<bean id="addAttachmentEntryController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.forum.AddAttachmentController" />

	<bean id="profileViewEntryController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.profile.ViewEntryController" />
	<bean id="folderViewEntryController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.forum.ViewEntryController" />
	<bean id="binderViewPermalinkController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.forum.ViewPermalinkController" />

	<bean id="listProfilesController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.profile.ListProfilesController" />
	<bean id="listFolderController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.forum.ListFolderController" />
	<bean id="listWSController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.workspaceTree.WorkspaceTreeController" />

	<bean id="updatePresenceController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.presence.UpdatePresenceController" />
	<bean id="dashboardPortletModifyController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.dashboard.ModifyDashboardController" />
	<bean id="emailConfigController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.binder.EmailConfigController" />
	<bean id="sendEmailController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.binder.SendMailController" />
	<bean id="sendEntryEmailController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.forum.SendEntryMailController" />

 	<!-- Handlers -->

	<bean id="portletModeParameterHandlerMapping" parent="portletModeParameterHandlerMappingTemplate">
			<property name="portletModeParameterMap">
			<map>
				<entry key="view">
					<map>
						<entry key="build_filter"><ref bean="filterController"/></entry>
						<entry key="close_window"><ref bean="closeWindowController"/></entry>
						<entry key="configure_access_control"><ref bean="accessControlController"/></entry>
						<entry key="configure_definitions"><ref bean="configureController"/></entry>
						<entry key="definition_builder"><ref bean="definitionController"/></entry>
						<entry key="modify_binder"><ref bean="binderModifyController"/></entry>
						<entry key="modify_dashboard"><ref bean="dashboardModifyController"/></entry>
						<entry key="modify_dashboard_portlet"><ref bean="dashboardPortletModifyController"/></entry>
						<entry key="reload_opener"><ref bean="reloadOpenerController"/></entry>
						<entry key="search"><ref bean="searchController"/></entry>

						<entry key="add_folder_entry"><ref bean="folderAddEntryController"/></entry>
						<entry key="add_folder_reply"><ref bean="folderAddEntryController"/></entry>
						<entry key="add_profile_entry"><ref bean="profileAddEntryController"/></entry>
						<entry key="add_binder"><ref bean="folderAddFolderController"/></entry>
						<entry key="modify_folder_entry"><ref bean="folderModifyEntryController"/></entry>
						<entry key="add_entry_attachment"><ref bean="addAttachmentEntryController"/></entry>
						<entry key="lock_folder_entry"><ref bean="folderModifyEntryController"/></entry>
						<entry key="unlock_folder_entry"><ref bean="folderModifyEntryController"/></entry>
						<entry key="modify_profile_entry"><ref bean="profileModifyEntryController"/></entry>
						<entry key="view_folder_entry"><ref bean="folderViewEntryController"/></entry>
						<entry key="view_permalink"><ref bean="binderViewPermalinkController"/></entry>
						<entry key="view_profile_entry"><ref bean="profileViewEntryController"/></entry>
						<entry key="view_folder_listing"><ref bean="listFolderController"/></entry>
						<entry key="view_profile_listing"><ref bean="listProfilesController"/></entry>
						<entry key="view_search_results_listing"><ref bean="searchController"/></entry>
						<entry key="view_ws_listing"><ref bean="listWSController"/></entry>
						<entry key="view_presence"><ref bean="updatePresenceController"/></entry>
						<entry key="__ajax_request"><ref bean="folderAjaxController"/></entry>
						<entry key="config_email"><ref bean="emailConfigController"/></entry>
						<entry key="send_email"><ref bean="sendEmailController"/></entry>
						<entry key="send_entry_email"><ref bean="sendEntryEmailController"/></entry>
						
					</map>
				</entry>
				<entry key="edit">
					<map>
					</map>
				</entry>
				<entry key="help">
					<map>
					</map>
				</entry>
			</map>
		</property>
	</bean>

	<bean id="portletModeHandlerMapping" parent="portletModeHandlerMappingTemplate">
		<property name="portletModeMap">
			<map>
				<entry key="view"><ref bean="viewController"/></entry>
				<entry key="edit"><ref bean="editController"/></entry>
<!--				<entry key="help"><ref bean="forumHelpController"/></entry> -->
			</map>
		</property>
	</bean>

	<bean id="defaultExceptionHandler" parent="portletDefaultExceptionHandlerTemplate"/>

</beans>
