<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "../../dtd/spring-beans.dtd">
<beans>

	<!-- Controllers -->
	<bean id="enterpriseOnlyController" parent="dependOnAllModulesTemplate" class="com.sitescape.team.portlet.EnterpriseOnlyController" />

	<!-- Handlers -->

	<bean id="portletModeHandlerMapping" parent="portletModeHandlerMappingTemplate">
		<property name="portletModeMap">
			<map>
				<entry key="view"><ref bean="enterpriseOnlyController"/></entry>
			</map>
		</property>
	</bean>

	<bean id="defaultExceptionHandler" parent="portletDefaultExceptionHandlerTemplate"/>

</beans>
