<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "../../dtd/spring-beans.dtd">
<beans>

	<!-- Controllers -->

	<bean id="listProfilesController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.profile.ListProfilesController" />
	<bean id="profileAccessControlController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.binder.AccessControlController" />
	<bean id="profileConfigureController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.binder.ConfigureController" />
	<bean id="profileFilterController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.binder.FilterController" />
	<bean id="profileController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.profile.ViewController" />
	<bean id="profileDefinitionController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.definitionBuilder.ViewController" />
	<bean id="profileViewEntryController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.profile.ViewEntryController" />
	<bean id="profileModifyEntryController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.profile.ModifyEntryController" />
	<!-- Handlers -->

	<bean id="portletModeParameterHandlerMapping" parent="portletModeParameterHandlerMappingTemplate">
			<property name="portletModeParameterMap">
			<map>
				<entry key="view">
					<map>
						<entry key="view_listing"><ref bean="listProfilesController"/></entry>
						<entry key="build_filter"><ref bean="profileFilterController"/></entry>
						<entry key="configure_access_control"><ref bean="profileAccessControlController"/></entry>
						<entry key="configure_forum"><ref bean="profileConfigureController"/></entry>
						<entry key="definition_builder"><ref bean="profileDefinitionController"/></entry>
						<entry key="view_entry"><ref bean="profileViewEntryController"/></entry>
						<entry key="modify_entry"><ref bean="profileModifyEntryController"/></entry>
						<entry key="delete_entry"><ref bean="profileModifyEntryController"/></entry>
					</map>
				</entry>
				<entry key="edit">
					<map>
					</map>
				</entry>
				<entry key="help">
					<map>
					</map>
				</entry>
			</map>
		</property>
	</bean>

	<bean id="portletModeHandlerMapping" parent="portletModeHandlerMappingTemplate">
		<property name="portletModeMap">
			<map>
				<entry key="view"><ref bean="profileController"/></entry>
			</map>
		</property>
	</bean>

	<bean id="defaultExceptionHandler" parent="portletDefaultExceptionHandlerTemplate"/>

</beans>
