<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "../../dtd/spring-beans.dtd">
<beans>

	<!-- Controllers -->

	<bean id="forumViewController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.forum.ViewController" />
	<bean id="forumEditController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.forum.EditController" />
	<bean id="forumAccessControlController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.binder.AccessControlController" />
	<bean id="forumConfigureController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.binder.ConfigureController" />
	<bean id="forumFilterController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.binder.FilterController" />
	<bean id="forumAddEntryController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.forum.AddEntryController" />
	<bean id="forumAddFolderController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.forum.AddFolderController" />
	<bean id="forumModifyBinderController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.forum.ModifyBinderController" />
	<bean id="forumModifyEntryController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.forum.ModifyEntryController" />
	<bean id="forumViewEntryController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.forum.ViewEntryController" />
	<bean id="forumDefinitionController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.definitionBuilder.ViewController" />
	<bean id="forumAjaxController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.forum.AjaxController" />

 	<!-- Handlers -->

	<bean id="portletModeParameterHandlerMapping" parent="portletModeParameterHandlerMappingTemplate">
			<property name="portletModeParameterMap">
			<map>
				<entry key="view">
					<map>
						<entry key="add_entry"><ref bean="forumAddEntryController"/></entry>
						<entry key="add_reply"><ref bean="forumAddEntryController"/></entry>
						<entry key="add_binder"><ref bean="forumAddFolderController"/></entry>
						<entry key="modify_binder"><ref bean="forumModifyBinderController"/></entry>
						<entry key="move_binder"><ref bean="forumModifyBinderController"/></entry>
						<entry key="delete_binder"><ref bean="forumModifyBinderController"/></entry>
						<entry key="build_filter"><ref bean="forumFilterController"/></entry>
						<entry key="configure_access_control"><ref bean="forumAccessControlController"/></entry>
						<entry key="configure_forum"><ref bean="forumConfigureController"/></entry>
						<entry key="definition_builder"><ref bean="forumDefinitionController"/></entry>
						<entry key="modify_entry"><ref bean="forumModifyEntryController"/></entry>
						<entry key="move_entry"><ref bean="forumModifyEntryController"/></entry>
						<entry key="delete_entry"><ref bean="forumModifyEntryController"/></entry>
						<entry key="view_entry"><ref bean="forumViewEntryController"/></entry>
						<entry key="view_listing"><ref bean="forumViewController"/></entry>
						<entry key="__ajax_request"><ref bean="forumAjaxController"/></entry>
					</map>
				</entry>
				<entry key="edit">
					<map>
					</map>
				</entry>
				<entry key="help">
					<map>
					</map>
				</entry>
			</map>
		</property>
	</bean>

	<bean id="portletModeHandlerMapping" parent="portletModeHandlerMappingTemplate">
		<property name="portletModeMap">
			<map>
				<entry key="view"><ref bean="forumViewController"/></entry>
				<entry key="edit"><ref bean="forumEditController"/></entry>
<!--				<entry key="help"><ref bean="forumHelpController"/></entry> -->
			</map>
		</property>
	</bean>

	<bean id="defaultExceptionHandler" parent="portletDefaultExceptionHandlerTemplate"/>

</beans>
