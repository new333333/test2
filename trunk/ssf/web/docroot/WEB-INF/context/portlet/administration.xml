<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "../../dtd/spring-beans.dtd">
<beans>

	<!-- Controllers -->
	<bean id="definitionBuilderController" parent="controllerDependencyTemplate" class="com.sitescape.team.portlet.definitionBuilder.ViewController" />
	<bean id="definitionBuilderXmlController" parent="controllerDependencyTemplate" class="com.sitescape.team.portlet.definitionBuilder.ViewDefinitionXmlController" />
	<bean id="adminViewController" parent="controllerDependencyTemplate" class="com.sitescape.team.portlet.administration.ViewController" />
	<bean id="adminConfigureLdapController" parent="controllerDependencyTemplate" class="com.sitescape.team.portlet.administration.ConfigureLdapController" />
	<bean id="adminConfigureRolesController" parent="controllerDependencyTemplate" class="com.sitescape.team.portlet.administration.ConfigureRolesController" />
	<bean id="adminConfigurePostingJobController" parent="controllerDependencyTemplate" class="com.sitescape.team.portlet.administration.ConfigurePostingJobController" />
	<bean id="adminConfigureSearchIndexController" parent="controllerDependencyTemplate" class="com.sitescape.team.portlet.administration.ManageSearchIndexController" />
	<bean id="adminImportDefinitionController" parent="controllerDependencyTemplate" class="com.sitescape.team.portlet.administration.ImportDefinitionController" />
	<bean id="adminExportDefinitionController" parent="controllerDependencyTemplate" class="com.sitescape.team.portlet.administration.ExportDefinitionController" />
	<bean id="adminConfigureConfigurationController" parent="controllerDependencyTemplate" class="com.sitescape.team.portlet.administration.ConfigureConfigurationController" />
	<bean id="adminImportProfilesController" parent="controllerDependencyTemplate" class="com.sitescape.team.portlet.administration.ImportProfilesController" />
	<bean id="adminManageGroupsController" parent="controllerDependencyTemplate" class="com.sitescape.team.portlet.administration.ManageGroupsController" />
	<bean id="adminViewChangeLogController" parent="controllerDependencyTemplate" class="com.sitescape.team.portlet.administration.ViewChangeLogController" />
	<bean id="emailConfigController" parent="controllerDependencyTemplate" class="com.sitescape.team.portlet.binder.EmailConfigController" />
	<bean id="accessControlController" parent="controllerDependencyTemplate" class="com.sitescape.team.portlet.binder.AccessControlController" />
	<bean id="configureController" parent="controllerDependencyTemplate" class="com.sitescape.team.portlet.binder.ConfigureController" />
	<bean id="dashboardModifyController" parent="controllerDependencyTemplate" class="com.sitescape.team.portlet.binder.ModifyDashboardController" />
	<!-- Handlers -->

	<bean id="portletModeParameterHandlerMapping" parent="portletModeParameterHandlerMappingTemplate">
			<property name="portletModeParameterMap">
			<map>
				<entry key="view">
					<map>
						<entry key="definition_builder"><ref bean="definitionBuilderController"/></entry>
						<entry key="viewDefinitionXml"><ref bean="definitionBuilderXmlController"/></entry>
						<entry key="configure_ldap"><ref bean="adminConfigureLdapController"/></entry>
						<entry key="configure_roles"><ref bean="adminConfigureRolesController"/></entry>
						<entry key="config_email"><ref bean="emailConfigController"/></entry>
						<entry key="configure_posting_job"><ref bean="adminConfigurePostingJobController"/></entry>
						<entry key="configure_index"><ref bean="adminConfigureSearchIndexController"/></entry>
						<entry key="configure_configuration"><ref bean="adminConfigureConfigurationController"/></entry>
						<entry key="import_definition"><ref bean="adminImportDefinitionController"/></entry>
						<entry key="export_definition"><ref bean="adminExportDefinitionController"/></entry>
						<entry key="import_profiles"><ref bean="adminImportProfilesController"/></entry>
						<entry key="manage_groups"><ref bean="adminManageGroupsController"/></entry>
						<entry key="view_change_log"><ref bean="adminViewChangeLogController"/></entry>
						<entry key="configure_access_control"><ref bean="accessControlController"/></entry>
						<entry key="configure_definitions"><ref bean="configureController"/></entry>
						<entry key="modify_dashboard"><ref bean="dashboardModifyController"/></entry>
						<entry key="view_folder_listing"><ref bean="adminConfigureConfigurationController"/></entry>
						<entry key="view_ws_listing"><ref bean="adminConfigureConfigurationController"/></entry>
					</map>
				</entry>
				<entry key="edit">
					<map>
					</map>
				</entry>
				<entry key="help">
					<map>
					</map>
				</entry>
			</map>
		</property>
	</bean>

	<bean id="portletModeHandlerMapping" parent="portletModeHandlerMappingTemplate">
		<property name="portletModeMap">
			<map>
				<entry key="view"><ref bean="adminViewController"/></entry>
			</map>
		</property>
	</bean>

	<bean id="defaultExceptionHandler" parent="portletDefaultExceptionHandlerTemplate"/>

</beans>
