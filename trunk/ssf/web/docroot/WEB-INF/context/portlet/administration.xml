<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "../../dtd/spring-beans.dtd">
<beans>

	<!-- Controllers -->
	<bean id="definitionBuilderController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.definitionBuilder.ViewController" />
	<bean id="definitionBuilderXmlController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.definitionBuilder.ViewDefinitionXmlController" />
	<bean id="adminViewController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.administration.ViewController" />
	<bean id="adminConfigureLdapController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.administration.ConfigureLdapController" />
	<bean id="adminConfigureRolesController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.administration.ConfigureRolesController" />
	<bean id="adminConfigureNotifyController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.administration.ConfigureNotifyController" />
	<bean id="adminConfigurePostingJobController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.administration.ConfigurePostingJobController" />
	<bean id="adminConfigurePostingController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.administration.ConfigurePostingController" />
	<bean id="adminConfigureSearchIndexController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.administration.ManageSearchIndexController" />
	<bean id="adminConfigureProfileIndexController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.administration.ManageProfileIndexController" />
	<bean id="adminImportDefinitionController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.administration.ImportDefinitionController" />
	<bean id="adminExportDefinitionController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.administration.ExportDefinitionController" />
	<bean id="adminConfigureConfigurationController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.administration.ConfigureConfigurationController" />
	<!-- Handlers -->

	<bean id="portletModeParameterHandlerMapping" parent="portletModeParameterHandlerMappingTemplate">
			<property name="portletModeParameterMap">
			<map>
				<entry key="view">
					<map>
						<entry key="definition_builder"><ref bean="definitionBuilderController"/></entry>
						<entry key="viewDefinitionXml"><ref bean="definitionBuilderXmlController"/></entry>
						<entry key="configure_ldap"><ref bean="adminConfigureLdapController"/></entry>
						<entry key="configure_roles"><ref bean="adminConfigureRolesController"/></entry>
						<entry key="configure_notify"><ref bean="adminConfigureNotifyController"/></entry>
						<entry key="configure_posting_job"><ref bean="adminConfigurePostingJobController"/></entry>
						<entry key="configure_posting"><ref bean="adminConfigurePostingController"/></entry>
						<entry key="configure_index"><ref bean="adminConfigureSearchIndexController"/></entry>
						<entry key="configure_configuration"><ref bean="adminConfigureConfigurationController"/></entry>
						<entry key="import_definition"><ref bean="adminImportDefinitionController"/></entry>
						<entry key="export_definition"><ref bean="adminExportDefinitionController"/></entry>
					</map>
				</entry>
				<entry key="edit">
					<map>
					</map>
				</entry>
				<entry key="help">
					<map>
					</map>
				</entry>
			</map>
		</property>
	</bean>

	<bean id="portletModeHandlerMapping" parent="portletModeHandlerMappingTemplate">
		<property name="portletModeMap">
			<map>
				<entry key="view"><ref bean="adminViewController"/></entry>
			</map>
		</property>
	</bean>

	<bean id="defaultExceptionHandler" parent="portletDefaultExceptionHandlerTemplate"/>

</beans>
