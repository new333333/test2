<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "../../dtd/spring-beans.dtd">
<beans>

	<!-- Controllers -->

	<bean id="definitionBuilderController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.definitionBuilder.ViewController" />
	<bean id="adminViewController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.administration.ViewController" />
	<bean id="adminConfigureLdapController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.administration.ConfigureLdapController" />
	<bean id="adminConfigureRolesController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.administration.ConfigureRolesController" />
	<bean id="adminConfigureNotifyController" parent="controllerDependencyTemplate" class="com.sitescape.ef.portlet.administration.ConfigureNotifyController" />
	<!-- Handlers -->

	<bean id="portletModeParameterHandlerMapping" parent="portletModeParameterHandlerMappingTemplate">
			<property name="portletModeParameterMap">
			<map>
				<entry key="view">
					<map>
						<entry key="definition_builder"><ref bean="definitionBuilderController"/></entry>
						<entry key="configure_ldap"><ref bean="adminConfigureLdapController"/></entry>
						<entry key="configure_roles"><ref bean="adminConfigureRolesController"/></entry>
						<entry key="configure_notify"><ref bean="adminConfigureNotifyController"/></entry>
					</map>
				</entry>
				<entry key="edit">
					<map>
					</map>
				</entry>
				<entry key="help">
					<map>
					</map>
				</entry>
			</map>
		</property>
	</bean>

	<bean id="portletModeHandlerMapping" parent="portletModeHandlerMappingTemplate">
		<property name="portletModeMap">
			<map>
				<entry key="view"><ref bean="adminViewController"/></entry>
			</map>
		</property>
	</bean>

	<bean id="defaultExceptionHandler" parent="portletDefaultExceptionHandlerTemplate"/>

</beans>
