<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:s="http://www.springframework.org/schema/security"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
    http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-2.0.1.xsd">

	<!-- ============================== Portal Login Support ============================ -->
	<bean id="portalLoginBean" class="com.sitescape.team.portal.StandaloneLogin"/>
	
	<bean id="zoneGrabbingFilter" class="com.sitescape.team.spring.security.ZoneGrabbingFilter">
		<s:custom-filter position="FIRST"/>
	</bean>
	
	<s:authentication-manager alias="springAuthenticationManager"/>
	
	<bean id="authenticationProcessingFilter" class="com.sitescape.team.spring.security.AuthenticationProcessingFilter">
    	<s:custom-filter position="AUTHENTICATION_PROCESSING_FILTER" />
		<property name="authenticationManager" ref="springAuthenticationManager"/>
		<property name="authenticationFailureUrl" value="/a/do?p_name=ss_forum&amp;p_action=1&amp;action=__login"/>
		<property name="defaultTargetUrl" value="/a/"/>
		<property name="filterProcessesUrl" value="/s/portalLogin"/>
		<property name="invalidateSessionOnSuccessfulAuthentication" value="true"/>
		<property name="migrateInvalidatedSessionAttributes" value="false"/>
    </bean>
  	
    <bean id="authenticationProcessingFilterEntryPoint" class="org.springframework.security.ui.webapp.AuthenticationProcessingFilterEntryPoint">
    	<property name="loginFormUrl" value="/a/do?p_name=ss_forum&amp;p_action=1&amp;action=__login"/>    	
    </bean>
	
    <!-- Form-based authentication -->
    <s:http session-fixation-protection="newSession" entry-point-ref="authenticationProcessingFilterEntryPoint">
        <s:intercept-url pattern="/ws/**" filters="none" />
        <s:intercept-url pattern="/**" access="IS_AUTHENTICATED_REMEMBERED,ROLE_ANONYMOUS" />

        <s:anonymous granted-authority="ROLE_ANONYMOUS" username="guest"  />
        <s:logout logout-url="/s/portalLogout" logout-success-url="/a/do?p_name=ss_forum&amp;p_action=1&amp;action=__login" />

    </s:http>
    
    <!-- Basic authentication. This option is reserved only for use in conjunction with 
         iChain/NAM or similar authentication proxy where the proxy handles all first-line
         authentication and subsequently sends login token in the form of Basic Auth header
         to the Teaming server. In all other situations, the form-based authentication must
         be used. -->
    <!--<s:http session-fixation-protection="newSession">
        <s:intercept-url pattern="/ws/**" filters="none" />
        <s:intercept-url pattern="/**" access="IS_AUTHENTICATED_FULLY" />
        
        <s:http-basic/>
    </s:http>-->
    
	<bean id="_anonymousProcessingFilter"
	      class="com.sitescape.team.spring.security.ZoneAwareAnonymousProcessingFilter">
		<property name="key" value="thisIsIgnored"/>
		<property name="userAttribute" value="guest,ROLE_ANONYMOUS"/>
		<property name="zoneModule"><ref bean="zoneModule"/></property>
		<property name="authenticationModule"><ref bean="authenticationModule"/></property>
	</bean>

	<bean id="springAuthenticationBeans" class="com.sitescape.team.spring.security.SpringAuthenticationBeans">
		<property name="zoneModule"><ref bean="zoneModule"/></property>
	</bean>

	<bean id="authenticationModule" parent="baseTransactionProxy" depends-on="springAuthenticationBeans">
		<property name="target">
			<bean parent="dependOnCommonServicesTemplate" class="com.sitescape.team.module.authentication.impl.AuthenticationModuleImpl">
				<property name="providerManager"><ref bean="springAuthenticationManager"/></property>
				<property name="zoneModule"><ref bean="zoneModule"/></property>
			</bean>
		</property>
	</bean>

</beans>
