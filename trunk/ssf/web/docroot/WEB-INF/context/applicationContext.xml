				</bean>
				<bean class="com.sitescape.team.pipeline.impl.NullDocHandler">
					<property name="name"><value>Second Handler</value></property>
				</bean>
				<bean class="com.sitescape.team.pipeline.impl.NullDocHandler">
					<property name="name"><value>Third Handler</value></property>
				</bean>-->
				<bean class="com.sitescape.team.docconverter.pipeline.DocConverterHandler">
					<property name="name"><value>Doc Converter</value></property>
					<property name="textConverter"><ref bean="textConverter"/></property>
