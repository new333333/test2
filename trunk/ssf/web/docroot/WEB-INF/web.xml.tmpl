<?xml version="1.0"?>

<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
                         "http://java.sun.com/dtd/web-app_2_3.dtd">
                         
<web-app>

	<display-name>SiteScape Forum</display-name>

	<context-param>
		<param-name>zoneName</param-name>
		<param-value>javademo</param-value>
	</context-param>
	
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>ssf.root</param-value>
	</context-param>

	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>/WEB-INF/log4j.properties</param-value>
	</context-param>
	
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/context/applicationContext.xml
		</param-value>
	</context-param>

	<filter>
		<filter-name>rssAuthenticationFilter</filter-name>
		<filter-class>com.sitescape.team.rss.servlet.filter.RssAuthenticationFilter</filter-class>
	</filter>

@@LOGIN_FILTER@@
	<filter-mapping>
		<filter-name>rssAuthenticationFilter</filter-name>
		<servlet-name>rss</servlet-name>
	</filter-mapping>

	<listener>
		<listener-class>org.springframework.web.util.WebAppRootListener</listener-class>
	</listener>

	<listener>
		<listener-class>com.sitescape.team.web.util.Log4jConfigListener</listener-class>
	</listener>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>viewRendererServlet</servlet-name>
		<servlet-class>org.springframework.web.portlet.ViewRendererServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>dispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>namespace</param-name>
			<param-value>context/web-servlet</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>portletAdapter</servlet-name>
		<servlet-class>com.sitescape.team.portletadapter.servlet.PortletAdapterServlet</servlet-class>
		<init-param>
			<param-name>namespace</param-name>
			<param-value>context/adapter-servlet</param-value>
		</init-param>
		<load-on-startup>3</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>axis</servlet-name>
		<servlet-class>org.apache.axis.transport.http.AxisServlet</servlet-class>
		<load-on-startup>4</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>rss</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>namespace</param-name>
			<param-value>context/rss-servlet</param-value>
		</init-param>
		<load-on-startup>5</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>CCDispatcher</servlet-name>
		<servlet-class>com.sitescape.team.web.crosscontext.server.DispatchServer</servlet-class>
		<init-param>
			<param-name>ssfContextPath</param-name>
			<param-value>/ssf</param-value>
		</init-param>
		<load-on-startup>6</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>ssfsCCDispatcher</servlet-name>
		<servlet-class>com.sitescape.team.ssfs.web.crosscontext.server.DispatchServer</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>viewRendererServlet</servlet-name>
		<url-pattern>/WEB-INF/servlet/view</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>dispatcher</servlet-name>
		<url-pattern>/s/*</url-pattern>		
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>portletAdapter</servlet-name>
		<url-pattern>/a/*</url-pattern>		
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>axis</servlet-name>
		<url-pattern>/ws/*</url-pattern>		
	</servlet-mapping>	

	<servlet-mapping>
		<servlet-name>rss</servlet-name>
		<url-pattern>/rss/*</url-pattern>
	</servlet-mapping>

	<!-- Do NOT ever change this timeout value -->
	<session-config>
		<session-timeout>0</session-timeout>
	</session-config>

@@TAGLIB_PORTLET@@
	<taglib>
		<taglib-uri>http://java.sun.com/jsp/jstl/core</taglib-uri>
		<taglib-location>/WEB-INF/tags/c.tld</taglib-location>
	</taglib>

	<taglib>
		<taglib-uri>http://java.sun.com/jsp/jstl/fmt</taglib-uri>
		<taglib-location>/WEB-INF/tags/fmt.tld</taglib-location>
	</taglib>

	<taglib>
		<taglib-uri>http://java.sun.com/jsp/jstl/functions</taglib-uri>
		<taglib-location>/WEB-INF/tags/fn.tld</taglib-location>
	</taglib>

	<taglib>
		<taglib-uri>http://www.springframework.org/tags</taglib-uri>
		<taglib-location>/WEB-INF/tags/spring.tld</taglib-location>
	</taglib>
	
	<taglib>
		<taglib-uri>http://www.sitescape.com/tags-ssf</taglib-uri>
		<taglib-location>/WEB-INF/tags/ssf.tld</taglib-location>
	</taglib>

	<taglib>
		<taglib-uri>http://www.sitescape.com/tags-portletadapter</taglib-uri>
		<taglib-location>/WEB-INF/tags/ssf-portletadapter.tld</taglib-location>
	</taglib>

	<resource-ref>
		<res-ref-name>jdbc/SiteScapePool</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Shareable</res-sharing-scope>
	</resource-ref>
	
	<resource-ref>
		<res-ref-name>mail/SiteScape</res-ref-name>
		<res-type>javax.mail.Session</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	
	<resource-ref>
		<res-ref-name>mail/SiteScapePosting</res-ref-name>
		<res-type>javax.mail.Session</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
	
@@SECURITY@@
</web-app>