<?xml version="1.0"?>

<project name="war" basedir="." default="war">
	<import file="../build-common.xml" />
	
	<property name="war.file" value="ssf.war" />
	<property name="temp.dir" value="temp" />

	<target name="clean">
		<delete>
			<fileset dir="." includes="${war.file}" />
		</delete>
		<delete includeEmptyDirs="true" failonerror="false">
			<fileset dir="${temp.dir}" />
		</delete>
	</target>
		
	<target name="war" depends="clean">
		
		<copy todir="${temp.dir}/WEB-INF/lib">
			<fileset dir="${project.dir}/main" includes="ssf-main.jar" />
			<fileset dir="${project.dir}/util" includes="ssf-util.jar" />
			<fileset dir="${project.dir}/util" includes="ssf-util-search.jar" />
			<fileset dir="${project.dir}/commons-httpclient-contrib" includes="ssf-commons-httpclient-contrib.jar" />
			<fileset dir="${project.dir}/lucene-contrib" includes="ssf-lucene-contrib.jar" />
			<fileset dir="${project.dir}/slide-webdavclient" includes="ssf-slide-webdavclient.jar" />
			<fileset dir="${project.dir}/taglib" includes="ssf-taglib.jar" />
			<fileset dir="${project.dir}/indexer-lucene" includes="ssf-lucenecommon.jar" />
			<fileset dir="${project.dir}/lib" includes="${libraries.current}" />
			<fileset dir="${project.dir}/lib" includes="jms.jar" />
		</copy>

		<copy todir="${temp.dir}/applets">
			<fileset dir="${project.dir}/applets" includes="**/*.jar" />
		</copy>		

		<copy file="${project.dir}/web/ssf-web.war" tofile="${war.file}" overwrite="yes" />
		
		<war
			basedir="${temp.dir}"
			destfile="${war.file}"
			update="yes"
		/>

	</target>
	
</project>