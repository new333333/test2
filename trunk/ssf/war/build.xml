<?xml version="1.0"?>

<project name="war" basedir="." default="war">
	<import file="../build-common.xml" />
	
	<property name="war.file" value="ssf.war" />

	<target name="clean">
		<delete>
			<fileset dir="." includes="${war.file}" />
		</delete>
		<delete includeEmptyDirs="true" failonerror="false">
			<fileset dir="pro-war" />
		</delete>
	</target>
		
	<target name="war">
		
		<copy todir="pro-war/WEB-INF/lib">
			<fileset dir="${project.dir}/main" includes="ssf-main.jar" />
			<fileset dir="${project.dir}/util" includes="ssf-util.jar" />
			<fileset dir="${project.dir}/taglib" includes="ssf-taglib.jar" />
			<fileset dir="${project.dir}/indexer-lucene" includes="ssf-luceneapi.jar" />
			<fileset dir="${project.dir}/remoting" includes="ssf-remotingapi.jar" />
			<fileset dir="${project.dir}/lib" includes="${libraries.current}" />
			<fileset dir="${project.dir}/lib" includes="jms.jar,mail.jar" />
		</copy>

		<copy todir="pro-war/applets">
			<fileset dir="${project.dir}/applets" includes="**/*.jar" />
		</copy>		

		<copy file="${project.dir}/web/ssf-web.war" tofile="${war.file}" overwrite="yes" />
		
		<war
			basedir="pro-war"
			destfile="${war.file}"
			update="yes"
		/>

	</target>
	
</project>