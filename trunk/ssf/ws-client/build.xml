		</axis-wsdl2java>
		<axis-wsdl2java
			output="${generated.dir}"
			verbose="true"
			url="${client.url}/SearchService?wsdl" >
			<mapping
				namespace="urn:search.service.ws.remoting.team.sitescape.com"
