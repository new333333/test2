<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="jaxRpcProxy" class="org.springframework.remoting.jaxrpc.JaxRpcPortProxyFactoryBean">
		<property name="serviceFactoryClass"><value>org.apache.axis.client.ServiceFactory</value></property>
		<!-- Change the host name to the one on which your server is running. -->
		<!-- To trace interactions using a tool like tcpmon, change the port number. -->
		<property name="wsdlDocumentUrl"><value>http://peace:8080/ssf/ws/Facade?wsdl</value></property>
		<!-- Change the host name to the one on which your server is running. -->
		<property name="namespaceUri"><value>http://peace:8080/ssf/ws/Facade</value></property>
		<property name="serviceName"><value>JaxRpcFacadeService</value></property>
		<property name="portName"><value>Facade</value></property>
		<property name="serviceInterface"><value>com.sitescape.team.remoting.api.Facade</value></property>
		<property name="portInterface"><value>com.sitescape.team.remoting.rmi.RemoteFacade</value></property>
		<property name="servicePostProcessors">
			<list>
				<bean class="com.sitescape.team.samples.remoting.client.ws.jaxrpc.BeanMappingServicePostProcessor"/>
			</list>
		</property>
	</bean>
	
	<bean id="facadeClient" class="com.sitescape.team.samples.remoting.client.FacadeClient">
		<property name="facade"><ref bean="jaxRpcProxy"/></property>
	</bean>
</beans>