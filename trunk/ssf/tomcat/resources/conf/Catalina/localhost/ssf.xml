<Context path="/ssf" docBase="../webapps/ssf" debug="0" reloadable="false" crossContext="true">
	<Resource 
		name="jdbc/SiteScapePool" 
		auth="Container" 
		type="javax.sql.DataSource" 
		driverClassName="@@@driverClassName"
		url="@@@url"
		username="@@@username"
		password="@@@password"
		maxActive="20"
	/>
	<Resource
		name="mail/SiteScape" 
		auth="Container" 
		type="javax.mail.Session"
		
		mail.transport.protocol="@@@mail.transport.protocol.out"
		mail.smtp.host="@@@mail.smtp.host.out"
		mail.smtp.user="@@@mail.smtp.user.out"
	/>
	<Resource 
		name="mail/SiteScapePosting" 
		auth="Container" 
		type="javax.mail.Session"
		mail.store.protocol="@@@mail.store.protocol.in"
		mail.pop3.host="@@@mail.pop3.host.in"
		mail.pop3.auth="@@@mail.pop3.auth.in"
		mail.pop3.user="@@@mail.pop3.user.in"
		mail.pop3.password="@@@mail.pop3.password.in"
		mail.imap.host="@@@mail.imap.host.in"
		mail.imap.auth="@@@mail.imap.auth.in"
		mail.imap.user="@@@mail.imap.user.in"
		mail.imap.password="@@@mail.imap.password.in"
		mail.transport.protocol="@@@mail.transport.protocol.in"
		mail.smtp.host="@@@mail.smtp.host.in"
		mail.smtp.user="@@@mail.smtp.user.in"
	/>
</Context>