<Context path="/ssf" docBase="../webapps/ssf" debug="0" reloadable="false" crossContext="true">
	<Resource 
		name="jdbc/SiteScapePool" 
		auth="Container" 
		type="javax.sql.DataSource" 
		driverClassName="@@@driverClassName"
		url="@@@url"
		username="@@@username"
		password="@@@password"
		maxActive="20"
	/>
	<Resource
		name="mail/SiteScape" 
		auth="Container" 
		type="javax.mail.Session"
		
		mail.transport.protocol="@@@mail.transport.protocol.out"
		mail.host="@@@mail.host.out"
		mail.user="@@@mail.user.out"
	/>
	<Resource 
		name="mail/SiteScapePosting" 
		auth="Container" 
		type="javax.mail.Session"
		mail.store.protocol="@@@mail.store.protocol.in"
		mail.host="@@@mail.host.in"
		mail.auth="@@@mail.auth.in"
		mail.user="@@@mail.user.in"
		mail.password="@@@mail.password.in"
	/>
</Context>