<Context path="/ssf" docBase="../webapps/ssf" debug="0" reloadable="false" crossContext="true">
	<Resource 
		name="jdbc/SiteScapePool" 
		auth="Container" 
		type="javax.sql.DataSource" 
		driverClassName="net.sourceforge.jtds.jdbc.Driver"
		url="jdbc:jtds:sqlserver://localhost/sitescape"
		username="sitescape"
		password="sitescape"
		maxActive="20"
	/>
	<Resource
		name="mail/SiteScape" 
		auth="Container" 
		type="javax.mail.Session"
		
		mail.transport.protocol="smtp"
		mail.smtp.host="host54a.simplicato.com"
		mail.user="mccann@sitescape.com"
	/>
	<Resource 
		name="mail/SiteScapePosting" 
		auth="Container" 
		type="javax.mail.Session"
		mail.pop3.host="localhost"
		mail.store.protocol="pop3"
		mail.pop3.auth="true"
		mail.user="liferay"
		mail.password="liferay"
	/>
</Context>