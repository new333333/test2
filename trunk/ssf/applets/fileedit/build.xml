<?xml version="1.0"?>

<project name="fileedit" basedir="." default="compile">
	<property name="project.dir" value="../.." />

	<import file="${project.dir}/build-common.xml"/>
	<import file="${project.dir}/deploy-support.xml" />

	<property name="fileeditsrc.dir" value="./src" />
	<property name="jar.file" value="ssf-fileedit-applet.jar" />
	<property name="signedjar.file" value="ssf-fileedit-applet-sign.jar" />

	<!-- This overrides the imported definition -->
	<path id="project.classpath">
		<pathelement path="${classpath}" />
		<fileset dir="../lib" includes="*.jar" />
	</path>

	<target name="deploy" depends="jar">
		<antcall target="deploy-applet">
			<param name="deploy-support.jar.file" value="${jar.file}" />
			<param name="deploy-support.applet.deploy.dir" value="applets/fileedit" />
		</antcall>
	</target>

	<target name="jar" depends="compile">
		<jar basedir="${classes.dir}" jarfile="${jar.file}" />
		
		<signjar jar="${jar.file}" alias="myKey" 
		keystore="sitescape.keystore" storepass="spDJOQ"/>
	</target>
	
</project>