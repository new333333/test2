<?xml version="1.0"?>

<project name="iis" basedir="." default="zip">
	<import file="../build-common.xml" />
	<property name="zip.file.name" value="kablink-teaming-iis-plugin.zip" />
	<property name="target.dir" value="temp/Teaming IIS Plugin" />
	<property name="jk.version" value="1.2.30" />

	<target name="clean">
		<delete dir="temp"/>
		<delete file="${zip.file.name}" failonerror="false" />
	</target>
		
	<target name="zip" depends="clean">
		<mkdir dir="${target.dir}"/>
		<copy todir="${target.dir}">
			<fileset dir="resources" includes="**/*" />
		</copy>
		<copy todir="${target.dir}/library">
			<fileset dir="download" includes="**/*${jk.version}*" />
		</copy>
		<copy file="${target.dir}/library/win32/isapi_redirect-${jk.version}.dll" tofile="${target.dir}/resource set 1/bin/isapi_redirect.dll" />
		<copy file="${target.dir}/library/win32/isapi_redirect-${jk.version}.dll" tofile="${target.dir}/resource set 2/bin/isapi_redirect.dll" />
		<zip destfile="${zip.file.name}"
			basedir="temp"
			includes="**/*"
		/>
	</target>

</project>