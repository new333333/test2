<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "../../dtd/spring-beans.dtd">
<beans>

	<!-- Controllers -->
	
	<bean id="masterController" class="org.kablink.teaming.liferaylight.portlet.MasterController" />

	<!-- Handlers -->
	
	<bean id="portletModeParameterHandlerMapping" parent="portletModeParameterHandlerMappingTemplate">
			<property name="portletModeParameterMap">
			<map>
				<entry key="view">
					<map>
					</map>
				</entry>
				<entry key="edit">
					<map>
					</map>
				</entry>
				<entry key="help">
					<map>
					</map>
				</entry>
			</map>
		</property>
	</bean>

	<bean id="portletModeHandlerMapping" parent="portletModeHandlerMappingTemplate">
		<property name="portletModeMap">
			<map>
				<entry key="view"><ref bean="masterController"/></entry>
				<entry key="edit"><ref bean="masterController"/></entry>
			</map>
		</property>
	</bean>

</beans>
