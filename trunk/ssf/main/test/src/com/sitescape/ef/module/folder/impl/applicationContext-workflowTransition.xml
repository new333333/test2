		    <value>com/sitescape/ef/domain/HistoryMap.hbm.xml</value>
		    <value>com/sitescape/ef/domain/Membership.hbm.xml</value>
		    <value>com/sitescape/ef/domain/Notification.hbm.xml</value>
		    <value>com/sitescape/ef/domain/PostingDef.hbm.xml</value>
		    <value>com/sitescape/ef/domain/Principal.hbm.xml</value>
