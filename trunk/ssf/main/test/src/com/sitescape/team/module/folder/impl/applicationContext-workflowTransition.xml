		    <value>com/sitescape/ef/domain/UserProperties.hbm.xml</value>
		    <value>com/sitescape/ef/domain/WorkflowState.hbm.xml</value>
			<value>com/sitescape/ef/security/function/Function.hbm.xml</value>
		    <value>com/sitescape/ef/security/function/WorkAreaFunctionMembership.hbm.xml</value>

