<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean id="springContextUtil" class="com.sitescape.team.util.SpringContextUtil" />

	<bean id="processorManager" class="com.sitescape.team.modelprocessor.ProcessorManager">
		<property name="config">
			<bean class="com.sitescape.team.util.DefaultMergeableXmlClassPathConfigFiles">
				<property name="configFiles">
					<list>
						<value>com/sitescape/team/modelprocessor/processor-mapping.xml</value>
					</list>		
				</property>
				<property name="validating"><value>false</value></property>
			</bean>
		</property>
	</bean>

	<bean id="myTestProcessor1" class="com.sitescape.team.modelprocessor.ProcessorManagerTests$MyTestProcessor1" />
	
	<bean id="myTestProcessor2" class="com.sitescape.team.modelprocessor.ProcessorManagerTests$MyTestProcessor2" abstract="true">
			<property name="greeting"><value>Hello</value></property>
	</bean>
	
</beans>