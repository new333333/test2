<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">
  <class discriminator-value="A" dynamic-update="true" lazy="false" table="SS_CustomAttributes" name="com.sitescape.ef.domain.CustomAttribute">
    <id unsaved-value="null" name="id">
      <column name="id" sql-type="char(32)"/>
      <generator class="uuid.hex"/>
    </id>
    <discriminator type="char" column="type"/>
    <component name="owner" class="com.sitescape.ef.domain.AnyOwner">
      <many-to-one name="folderEntry"/>
      <many-to-one name="principal"/>
      <many-to-one name="binder"/>
      <any name="entity" id-type="java.lang.Long" meta-type="string">
        <meta-value class="com.sitescape.ef.domain.FolderEntry" value="folderEntry"/>
        <meta-value class="com.sitescape.ef.domain.User" value="user"/>
        <meta-value class="com.sitescape.ef.domain.Group" value="group"/>
        <meta-value class="com.sitescape.ef.domain.Folder" value="folder"/>
        <meta-value class="com.sitescape.ef.domain.Workspace" value="workspace"/>
        <meta-value class="com.sitescape.ef.domain.ProfileBinder" value="profileBinder"/>
        <column name="ownerType" length="16"/>
        <column name="ownerId"/>
      </any>
      <property name="ownerType" update="false" insert="false"/>
      <property name="ownerId" update="false" insert="false"/>
      <property name="owningFolderSortKey" length="512"/>
    </component>
    <property name="name" length="64"/>
    <property name="stringValue" length="4000"/>
    <component name="description">
      <property name="HDescription" column="description_text" type="com.sitescape.ef.dao.util.SSClobStringType"/>
      <property name="HFormat" column="description_format"/>
    </component>
    <property name="longValue" />
    <property name="dateValue" />
    <property name="serializedValue"  type="com.sitescape.ef.dao.util.SSBlobSerializableType"/>
    <property name="xmlValue" type="com.sitescape.ef.dao.util.SSClobStringType"/>
    <property name="booleanValue" />
    <set inverse="true" cascade="all,delete-orphan" lazy="true" batch-size="4" name="values">
      <key column="parent"/>
      <one-to-many class="com.sitescape.ef.domain.CustomAttributeListElement"/>
    </set>
    <property name="valueType"/>
    <subclass name="com.sitescape.ef.domain.CustomAttributeListElement" lazy="false" discriminator-value="L" dynamic-update="true">
      <many-to-one name="parent">
        <column name="parent" sql-type="char(32)"/>
      </many-to-one>
    </subclass>
  </class>
</hibernate-mapping>
