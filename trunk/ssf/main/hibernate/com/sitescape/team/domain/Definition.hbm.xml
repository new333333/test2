<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">
  <class dynamic-update="true" table="SS_Definitions" name="com.sitescape.team.domain.Definition">
    <cache usage="nonstrict-read-write"/>
    <id unsaved-value="null" name="id" node="@id">
      <column name="id" sql-type="char(32)"/>
      <generator class="uuid.hex"/>
    </id>
    <version unsaved-value="undefined" name="lockVersion" column="lockVersion" type="long"/>
    <property name="zoneId" not-null="true"/>
    <property name="name" length="64"/>
    <property name="title" length="128"/>
    <property name="type"/>
    <property name="internalId" length="32"/>
    <property name="visibility"/>
    <many-to-one name="binder"/>
<!-- use length to force medium blob in mysql -->
    <property name="encoding" length="2000000" type="org.springframework.orm.hibernate3.support.BlobByteArrayType"/>
 <properties name="nameKey" unique="true" update="false" insert="false">
<property name="zoneId" update="false" insert="false"/>
<property name="name" update="false" insert="false"/>
</properties>
   <component name="creation" class="com.sitescape.team.domain.HistoryStamp">
      <property name="date" column="creation_date" type="timestamp"/>
      <many-to-one class="com.sitescape.team.domain.UserPrincipal" name="principal">
        <column name="creation_principal"/>
      </many-to-one>
    </component>
    <component name="modification" class="com.sitescape.team.domain.HistoryStamp">
      <property name="date" column="modification_date" type="timestamp"/>
      <many-to-one class="com.sitescape.team.domain.UserPrincipal" name="principal">
        <column name="modification_principal"/>
      </many-to-one>
    </component>
  </class>
  <query name="find-definition-by-name"><![CDATA[from com.sitescape.team.domain.Definition def where def.name=:name and def.zoneId=:zoneId]]></query>
</hibernate-mapping>
