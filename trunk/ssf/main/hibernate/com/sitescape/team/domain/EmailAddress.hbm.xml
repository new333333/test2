<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">
  <class dynamic-update="true" table="SS_EmailAddresses" lazy="false" name="com.sitescape.team.domain.EmailAddress">
    <cache usage="read-write"/>
    <composite-id >
     <key-many-to-one name="principal"/>
     <key-property name="type" length="64"/>
    </composite-id>
    <property name="zoneId" access="field" not-null="true"/>
    <property name="address" type="string"  length="256"/>
</class>
</hibernate-mapping>